---
import Header from '../components/header/Header.astro';
const { title, lang, dir, frontmatter, headings } = Astro.props;
import RightSidebar from '../components/docs/RightSidebar.astro';
import LeftSidebarBlog from '../components/docs/LeftSidebarBlog.astro';
import Footer from '../components/footer/Footer.astro';
---

<Header title={title ?? frontmatter.title} lang={lang ?? frontmatter.lang}>
<body>
   <main>
      <section class="docs">
      <aside class="leftSideBar">
         <LeftSidebarBlog lang={lang ?? frontmatter.lang} />
      </aside>
      <article class="article" >
        <div class= "test">
         <slot />
         </div>
      </article>
      <aside class="rightSidebar">
         <RightSidebar headings={headings} githubEditUrl={"githubEditUrl"} />
      </aside>
   </main>
   <Footer lang={lang ?? frontmatter.lang}/>
</body>
</Header>
<style>
@media only screen and (min-width: 1028px) {
   .docs{
   margin: 80px 0px;
   display: grid;
   box-sizing: border-box;
   grid-template: "sb main al" / 390px 1fr 290px;
 }
}




   @media only screen and (min-width: 1028px) {
   .leftSideBar{
   display: block;
   position: fixed;
   width: 390px;
   padding: 1rem;
   overflow-x: hidden;
   height: calc(100vh - 120px);
   }
 }

    @media only screen and (max-width: 1028px) {
    .leftSideBar{
    display: none;
    }
  }


   .article{
   grid-area: main / main / main / main;
    margin: 0px auto;

   }
    @media only screen and (min-width: 1028px) {
   .test{
   max-width: 800px;
   }
}


@media only screen and (min-width: 1028px) {
   .rightSidebar{
    width: 290px;
    left: unset;
    right: 0px;
    display: block;
    position: fixed;
   }

}
    @media only screen and (max-width: 1028px) {
    .rightSidebar{
    display: none;
    }
  }

</style>
