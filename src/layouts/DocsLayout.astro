---
import Header from '../components/header/Header.astro';
const { title, lang, dir, frontmatter, headings } = Astro.props;
import RightSidebar from '../components/docs/RightSidebar.astro';
import LeftSidebar from '../components/docs/LeftSidebar.astro';
import Footer from '../components/footer/Footer.astro';
---

<Header title={title ?? frontmatter.title} lang={lang ?? frontmatter.lang}>
<body>
   <main>
      <section class="docs">
      <aside class="leftSideBar">
         <LeftSidebar lang={lang ?? frontmatter.lang} />
      </aside>
      <article class="article" >
         <slot />
      </article>
      <aside class="rightSidebar">
         <RightSidebar headings={headings} githubEditUrl={"githubEditUrl"} />
      </aside>
   </main>
   <Footer lang={lang ?? frontmatter.lang}/>
</body>
</Header>
<style>
   .docs{
   margin: 80px 0px;
   display: grid;
   grid-template-areas:
   "al"
   "main";
   }
   .leftSideBar{
   display: block;
   left: 0;
   position: fixed;
   width: 390px;
   padding: 1rem;
   overflow-x: hidden;
   height: calc(100vh - 120px);
   }
   .article{
   grid-area: main / main / main / main;
   margin: 0px auto;
   max-width: 750px;
   }
   .rightSidebar{
   display: block;
   right: 0;
   position: fixed;
   width: 390px;
   padding: 1rem;
   overflow-x: hidden;
   height: calc(100vh - 120px);
   }
</style>
