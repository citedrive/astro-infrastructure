---
import BaseLayout from "./BaseLayout.astro";

interface Props {
  lang?: string;
  description?: string;
  title?: string;
  type?: string;
  thumbnail?: string;
//   schemaHomepage?: object;
//   schemaOverleaf?: object;
//   schemaBlog?: object;
//   schemaBlogPost?: object;
}
const { title, lang, dir, description, type, frontmatter, headings } = Astro.props;
---

<BaseLayout 
title={title ?? frontmatter.title} 
lang={lang ?? frontmatter.lang} 
description={description} 
disc={true}
>

<article class="discovery flex" style="flex-direction: column; --gap: 3.5rem; margin-bottom: 6.5rem;">
  <slot />
</article>

</BaseLayout>


<style>

.discovery {
   margin-top: 8.5rem;
   padding-inline: 1rem;
   margin-inline: auto;
   width: 100%;
   max-width: 940px
}

@media(min-width: 980px) {
  .discovery {
   margin-top: 10rem;
}

}

</style>
