---
import '../../styles/theme.css';
import '../../styles/index.css';
import SEO from "./SEO.astro"
import Logo from "./Logo.astro"
const { title, lang, dir } = Astro.props;
---

<!DOCTYPE html>
<html dir={dir ?? 'ltr'} lang={lang} class="initial">

	<head>

<SEO title={title} lang={lang} ></SEO>


	</head>
  <header class="header">
  <a href= `/${lang == "en" ? "" : lang + "/"}` + >
        	<Logo class="logo"/></a>
            	<div>Option Option Option</div>


                	<div class="nav">Blog Docs  <button>Get started</button> Login</div>

  </header>
    <slot />
</html>


<style>
  .header{
    width: 100%;
    position: fixed;
    display: flex;
    -webkit-box-pack: justify;
    justify-content: space-between;
    -webkit-box-align: center;
    align-items: center;
    top: 0px;
    z-index: 9999;
    color: rgb(42, 42, 42);
    transition: all 0.5s ease 0s;
    box-shadow: none;
    background-color: var(--theme-bg);
    padding: 1rem 16px;
}

  .nav{

    display: flex;

}

    .logo{
    width: "10%";
    }

    </style>
