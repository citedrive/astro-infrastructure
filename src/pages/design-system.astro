            </div>

            </div>

    </section>

     <section id="interactive_elements">

            <h2 class="grid design-system-seperator" style="grid-template-columns: 20px auto;"><span class="text-accent">3.</span>Interactive Elements</h2>
            <div class="flex" style="background-color: white; padding: 3rem 1rem; flex-wrap: wrap; align-items: center;">
            <CallToActionButton />
            <InternalLink />
            <div style="width: 100%">
            <!-- <Dropdown label="I'm a Dropdown" client:load><p>Hello</p></Dropdown> -->
            <Dropdown label="I'm a Dropdown Menu">
                <ul class="grid" style="list-style: none; padding: 0">
                    <li><a href="/">Overleaf</a></li>
                    <li><a href="/">RStudio</a></li>
                </ul>
            </Dropdown>
            </div>
            </div>
    </section>

    </div>

</Layout>

<style>

.design-system-seperator {
	padding: .5rem 1rem;
	background-color: rgb(236, 226, 226);
	max-width: 80%;
}

.ds-font-showcase > strong {
	font-size: .7rem;
}
   
